				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"first_name\": \"Juan\",\n    \"last_name\": \"Pérez\",\n    \"email\": \"juan.perez@example.com\",\n    \"password1\": \"password123\",\n    \"password2\": \"password123\"\n}"
